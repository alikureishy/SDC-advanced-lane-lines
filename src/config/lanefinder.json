{
    "Pipeline": [
    	"ShowOriginal",
    	"Undistorter",
    	"Resizer",
    	"ColorSpacer",
    	"Thresholder",
    	"Perspective",
    	"CurveExtractor",
    	"LaneFiller"
    ],
    "ShowOriginal": {
		"ToPlot": 1
	},
    "ColorSpacer": {
		"ToPlot": 1,
		"Original": "BGR",
		"Target": "RGB"
	},
    "Resizer": {
		"ToPlot": 1,
		"TargetShape": [216, 384]
	},
    "Undistorter": {
		"ToPlot": 1,
        "CalibrationFile": "config/calibration.pickle"
	},
    "RegionMasker": {
		"ToPlot": 1,
        "RelativePoints": [
        	[0.15, 0.90], 
        	[0.85, 0.90],
        	[0.65, 0.55],
        	[0.35, 0.55]
        ]
    },
    "Thresholder": {
		"ToPlot": 1,
		"Term":
		{
			"ToPlot": 1,
			"Operator": "OR",
			"Operands": [
		    	{"SobelX": { "Kernel": 3, "MinMax": [0, 255], "ToPlot": 1}},
		    	{"SobelY": { "Kernel": 3, "MinMax": [0, 255], "ToPlot": 1}},
		    	{"SobelXY": { "Kernel": 3, "MinMax": [0, 255], "ToPlot": 1}},
		    	{"SobelTanXY": { "Kernel": 3, "MinMax": [-1.0, 1.0], "ToPlot": 1}},
		    	{"Color": { "Space": "HLS", "Channel": 0, "MinMax": [0,255], "ToPlot": 1}}
			]
		}
    },
    "ThresholderExample": {
		"ToPlot": 1,
		"Term":
		{
			"ToPlot": 0,
			"Operator": "OR",
			"Operands": [
				{
					"ToPlot": 0,
					"Operator": "AND",
					"Operands": [
				    	{"SobelX": { "Kernel": 3, "MinMax": [0, 255], "ToPlot": 1}},
				    	{"SobelY": { "Kernel": 3, "MinMax": [0, 255], "ToPlot": 1}}
					]
				},
				{
					"ToPlot": 0,
					"Operator": "AND",
					"Operands": [
				    	{"SobelTanXY": {"Kernel": 3, "MinMax": [0, 1.57], "ToPlot": 1}},
				    	{"SobelXY": { "Kernel": 3, "MinMax": [0, 255], "ToPlot": 1}}
					]
				},
		    	{"Color": { "Space": "HLS", "Channel": 0, "MinMax": [0,255], "ToPlot": 1}}
			]
		}
    },
    "Perspective": {
		"ToPlot": 1,
        "RelativePoints": [
        	[0.25, 0.20], 
        	[0.25, 0.70], 
        	[0.75, 0.20],
        	[0.75, 0.70]
        ]
    },
    "CurveExtractor": {
		"ToPlot": 1,
        "LeftCurveKey": "LeftCurve",
        "RightCurveKey": "RightCurve"
    },
    "LaneFiller": {
		"ToPlot": 1,
    	"FillColor": [2,5,5],
        "LeftCurveKey": "LeftCurve",
        "RightCurveKey": "RightCurve"
    }
}
